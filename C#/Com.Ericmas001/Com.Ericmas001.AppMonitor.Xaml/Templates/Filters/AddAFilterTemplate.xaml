<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../EmptyTemplate.xaml"/>
        <ResourceDictionary Source="CommandsDataTemplate.xaml"/>
        <ResourceDictionary Source="ComparatorsDataTemplate.xaml"/>
        <ResourceDictionary Source="SearchTypesDataTemplate.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="AddAFilterTemplate">
        <StackPanel Orientation="Horizontal" Margin="10">

            <TextBlock Text="{Binding Field}" Margin="3,0,3,0" VerticalAlignment="Center" />

            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource CommandSelectorTemplate}" Margin="3,0,3,0" VerticalAlignment="Center" MinWidth="100" HorizontalAlignment="Center" />

            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource ComparatorSelectorTemplate}" Margin="3,0,3,0" VerticalAlignment="Center" MinWidth="100" HorizontalAlignment="Center" />

            <ContentControl Content="{Binding}" Margin="3,0,3,0" VerticalAlignment="Center" MinWidth="100" HorizontalAlignment="Center">
                <ContentControl.Style>
                    <Style TargetType="{x:Type ContentControl}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="None">
                                <Setter Property="ContentTemplate" Value="{StaticResource EmptyTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="Text">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeTextTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="Int">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeIntTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="Date">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeDateTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="Time">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeTimeTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="List">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeListTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentSearchType}" Value="CheckList">
                                <Setter Property="ContentTemplate" Value="{StaticResource SearchTypeCheckListTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>

            <Button Margin="3,0,3,0" VerticalAlignment="Center" MinWidth="100" HorizontalAlignment="Center" Command="{Binding AddCommand}">Ajouter</Button>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>
