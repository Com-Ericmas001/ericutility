<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="Add" UriSource="/Com.Ericmas001.Wpf;component/Resources/add.png" />

    <DataTemplate x:Key="CloseableHeaderTemplate">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="20">
            <TextBlock Text="{Binding CloseableTabVM.TabName}" VerticalAlignment="Center"/>
            <Button Style="{StaticResource MiniCrossButton}" VerticalAlignment="Center" Margin="5,0,0,0"  Command="{Binding Path=CloseableTabVM.CloseTabCommand}"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="NewTabHeaderTemplate">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="20">
            <Image Source="{StaticResource Add}" Height="12" Width="12" Stretch="UniformToFill" Margin="0"/>
        </StackPanel>
    </DataTemplate>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Com.Ericmas001.Wpf;component/Resources/ButtonResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>